<%= link_to "Back", :back %>

<h1> Post New Comment for <%= @trend.title %> </h1>

<%= form_for [@trend, @comment] do |f| %>

  <p>
     <%= f.label :author %><br>
     <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :additional_link %><br>
    <%= f.text_area :additional_link %>
  </p>

  <%= f.submit %>
<% end %>
