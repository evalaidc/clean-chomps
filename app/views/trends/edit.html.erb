<%= link_to "Back", :back %>

<h1> Edit <%= @trend.title %> </h1>

<%= form_for @trend do |f| %>

  <p>
     <%= f.label :title %><br>
     <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :photo_url %><br>
    <%= f.text_area :photo_url %>
  </p>
  <p>
    <%= f.label :ref_link %><br>
    <%= f.text_area :ref_link %>
  </p>

  <%= f.submit %>
<% end %>

<%= form_for @trend, url: "/trends/#{@trend.id}", method: :delete do |f| %>
  <% f.submit "Delete Trend", class: "btn-delete" %>
<% end %>
